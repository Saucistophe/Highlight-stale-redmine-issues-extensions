{
  "manifest_version": 3,
  "name": "Highlight Stale Agile Issues",
  "version": "0.1",
  "description": "Highlights Redmine issues that stayed in a specific status for more than one day.",
  "permissions": ["storage"],
  "host_permissions": ["https://*/redmine/projects/*/agile/board"],
  "content_scripts": [
    {
      "matches": ["https://*/redmine/projects/*/agile/board"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "48": "icon.png" },
  "options_page": "options.html"
}
